<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.tick.smashrotation.SmashRotationActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/list_of_players_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adapter_player_name"
        android:layout_centerVertical="true"
        android:textColor="@color/app_theme_red_light"
        android:textSize="@dimen/adapter_text_size"
        android:layout_marginLeft="@dimen/adapter_player_name_margin_start" />
    
    <CheckBox
        android:id="@+id/chosen_player"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:button="@drawable/character_selector"
        android:layout_alignParentRight="true" />

</RelativeLayout>