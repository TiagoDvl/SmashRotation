<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.tick.smashrotation.SmashRotationActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/list_of_players_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/adapter_player_name_margin_start"
        android:text="@string/adapter_player_name"
        android:textColor="@color/color_player_list_text"
        android:textSize="@dimen/adapter_text_size" />

    <CheckBox
        android:id="@+id/chosen_player"
        android:layout_width="90px"
        android:layout_height="90px"
        android:layout_alignParentRight="true"
        android:button="@drawable/character_selector"
        android:scaleX="1.8"
        android:scaleY="1.8" />

</RelativeLayout>