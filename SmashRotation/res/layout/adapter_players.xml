<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.tick.smashrotation.SmashRotationActivity$PlaceholderFragment" >

    <ImageView
        android:id="@+id/smash_logo"
        android:layout_width="70dp"
        android:layout_height="49dp"
        android:contentDescription="@null"
        android:background="@drawable/smash_vector" />

    <TextView
        android:id="@+id/list_of_players_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/smash_logo"
        android:text="@string/adapter_player_name"
        android:layout_centerVertical="true"
        android:textColor="@color/light_gray"
        android:layout_marginLeft="@dimen/adapter_player_name_margin_start" />

</RelativeLayout>