<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8px"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8px"
    tools:context="br.com.tick.rotation.SmashRotationActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/list_of_players_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/adapter_player_name_margin_start"
        android:text="@string/adapter_player_name"
        android:textColor="@color/color_player_list_text"
        android:textSize="@dimen/nine_pt" />

    <ImageView
        android:id="@+id/mvp"
        android:layout_width="47px"
        android:layout_height="37px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10px"
        android:background="@drawable/icon_crown_results"
        android:visibility="gone" />

</RelativeLayout>